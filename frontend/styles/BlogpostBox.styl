.blogpost
	width 70%
	border 1px solid
	margin-bottom 25px
	margin-right auto
	margin-left auto
	padding 3%
	background-color #eeeeee
	border-radius 10px
	box-shadow 0px 0px 2px 2px grey

.blogpostList
	width 80%
	margin-top 5%
	margin-right 10%
	margin-left 10%
	
.blogpostHeader
	font-size 95%
	font-style italic
	
.headerDivider
	height 1px
	border 1px solid #dedede
	margin-right 3%
	margin-left 3%
	margin-bottom 10px
	margin-top 10px
	