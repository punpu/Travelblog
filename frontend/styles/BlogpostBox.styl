.blogpost
	width 100%
	border 1px solid
	margin-bottom 25px
	margin-right auto
	margin-left auto
	padding 3%
	background-color #eeeeee
	border-radius 10px
	box-shadow 0px 0px 2px 2px grey
	

.blogpostList
	width 95%
	margin-top 5%
	margin-right auto
	margin-left auto

/* Bigger blogpost margins for bigger width screens */
@media only screen and (orientation: landscape)
	.blogpostList
		width 65%	
	
.blogpostHeader
	font-size 95%
	font-style italic
	
.headerDivider
	height 1px
	border 1px solid #dedede
	margin-right 3%
	margin-left 3%
	margin-bottom 10px
	margin-top 10px
	
.blogpost-enter {
  opacity 0.01
  transform translate(0px, 80px)
  
}

.blogpost-enter.blogpost-enter-active {
  opacity 1
  transition all 400ms ease-out
  transform translate(0px, 0px)
}